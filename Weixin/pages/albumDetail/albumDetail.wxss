.container {
  width: 100%;
  position: relative;
}
.swiper_view {
  width: 100%;
  height: 400rpx;
}
.my_img {
  width: 100%;
  height: 100%;
}
.title {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 10rpx;
  background-color: rgba(0,0,0,.4);
  color: #fff;
}
.user {
  display: flex;
  padding: 0 10rpx;
  height: 100rpx;
  align-items: center;
}
.user_img {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}
 /*图片列表*/
 .list_view {
  display: flex;
  flex-wrap: wrap;
}
.list_item {
  width: 33.33%;
  border: 3px solid #fff;
  height: 480rpx;
}