.album {
  height: calc(100vh - 70rpx);
  display: flex;
  flex-wrap: wrap;
}
.album_item {
  width: 50%;
  border: 3px solid #fff;
  position: relative;
}
.my_img {
  width: 100%;
}
.txt {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  padding: 10rpx;
  background-color:rgba(0,0,0,.4);
  color: #fff;
}
.imgs {
  display: flex;
}
.pic {
  border: 1px solid #fff;
  width: 125rpx;
  height: 125rpx;
}